<launch>
    <let name="urdf_path" 
          value="$(find-pkg-share my_robot_description)/urdf/rover.urdf.xacro" />

    <let name="rover_rviz_config_path" 
          value="$(find-pkg-share my_robot_description)/rviz/rover_config.rviz" />

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description"
                value="$(command 'xacro $(var urdf_path) ')" />
    </node>

    <node pkg="joint_state_publisher_gui" exec="joint_state_publisher_gui" />

    <!-- RViz'i aç ama bomboş açma. -d (display) yani 'görüntü ayarı' olarak sana verdiğim şu adresteki dosyayı kullan.--> -->
   <node pkg="rviz2" exec="rviz2" output="screen"
        args="-d $(var rover_rviz_config_path)" />

</launch>